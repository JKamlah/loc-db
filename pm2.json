{
  // App part
  "apps" : [{
    "name"      : "loc-db",
    "script"    : "app.js",
    "append_env_to_name": true,
    "env_development": {
      "NODE_ENV": "development",
      "PORT": 3101,
      "SCHEMA": "locdb-dev",
      "PORT_MAPPED": true,
      "HOST": "locdb.bib.uni-mannheim.de"
    },
    "env_production" : {
      "NODE_ENV": "production",
      "PORT": 3100,
      "SCHEMA": "locdb-prod",
      "PORT_MAPPED": true,
      "HOST": "locdb.bib.uni-mannheim.de"
    }
  }],
  // Deployment part
  "deploy" : {
    "production" : {
      "user" : "anlausch",
      // Multi host is possible, just by passing IPs/hostname as an array
      "host" : "locdb",
      // Branch
      "ref"  : "origin/master",
      // Git repository to clone
      "repo" : "git@github.com:locdb/loc-db.git",
      // Path of the application on target servers
      "path" : "~/locdb-prod",
      "post-deploy" : "npm install && pm2 startOrRestart pm2.json --env production",
      // Environment variables that must be injected in all applications on this env
      "env"  : {
        "NODE_ENV": "production"
      }
    },
    "development" : {
      "user" : "anlausch",
      "host" : "locdb",
      "ref"  : "origin/dev",
      "repo" : "git@github.com:locdb/loc-db.git",
      "path" : "~/locdb-dev",
      "post-deploy" : "npm install && mkdir -p ./../upload && pm2 startOrRestart pm2.json --env development",
      "env"  : {
        "NODE_ENV": "development"
      }
    }
  }
}